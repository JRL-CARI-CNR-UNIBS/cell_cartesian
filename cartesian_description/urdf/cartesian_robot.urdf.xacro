  </material>
  <material name="green">
    <color rgba="0 1 0 0.5"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 0.5"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <link name="link_Z"/>
  <link name="link_Y"/>
  <link name="link_X"/>

