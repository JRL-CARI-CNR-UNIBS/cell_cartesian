  <link name="end_effector">
    <visual>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_X" type="prismatic">
    <parent link="link_X"/>
    <child link="link_Y"/>
    <axis xyz = "1 0 0" />
    <origin rpy="0 0 0" xyz="-0.5 0.5 0"/>
    <limit effort="1000.0" lower="0" upper="1" velocity="0.5"/>
  </joint>

  <joint name="joint_Y" type="prismatic">
    <parent link="link_Y"/>
    <child link="link_Z"/>
    <axis xyz = "0 1 0" />
    <origin rpy="0 0 0" xyz="0 -0.5 0.5"/>
    <limit effort="1000.0" lower="0" upper="1" velocity="0.5"/>
  </joint>

  <joint name="joint_Z" type="prismatic">
    <parent link="link_Z"/>
    <child link="end_effector"/>
    <axis xyz = "0 0 1" />
    <origin rpy="0 0 0" xyz="0 0 -0.5"/>
    <limit effort="1000.0" lower="0" upper="1" velocity="0.5"/>
  </joint>

</robot>
